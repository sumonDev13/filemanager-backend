{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext", // <-- Change from CommonJS
    "moduleResolution": "NodeNext", // <-- Change from node
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}